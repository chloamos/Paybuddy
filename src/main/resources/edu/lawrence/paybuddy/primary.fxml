<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lawrence.paybuddy.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="TOP_RIGHT" prefWidth="200.0">
         <children>
            <Label text="From: " />
            <TextField fx:id="fromAcct" />
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefWidth="200.0">
         <children>
            <Label text="To: " />
            <TextField fx:id="toAcct" />
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefWidth="200.0">
         <children>
            <Label text="Amount: " />
            <TextField fx:id="amt" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefWidth="200.0">
         <children>
            <Label fx:id="msg" prefWidth="140.0" />
            <Button mnemonicParsing="false" onAction="#handleTransfer" text="Transfer" />
         </children>
      </HBox>
   </children>
</VBox>
